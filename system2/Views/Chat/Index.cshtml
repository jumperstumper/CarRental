@model IEnumerable<Comments>


@{
    Layout = "_Template";
}




<div class="container mt-5">
    <div class="commentsection d-flex justify-content-center row">
        <div class="col-md-8">
            <div class=" d-flex flex-column">

                <div class=" bg-white p-2">
                    @if (Model.Count() > 0)
                    {
                        @foreach (var comments in Model)
                        {
                    <div class=" d-flex flex-row user-info">
                        <img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40">
                        <div class=" d-flex flex-column justify-content-start ml-2"><span class="d-block font-weight-bold name">User</span><span class="date text-black-50">@comments.Created</span></div>
                        <td>
                            <a asp-controller="Chat" asp-route-Id="@comments.Id" asp-action="Delete" onclick="return confirm('Are you sure you want to delete @comments.Message ?')" class="btn btn-danger btn-sm text-white mt-3">Delete</a>
                        </td>
                    </div>
                            <div class="mt-2">
                                <p class="comment-text"><h6> @Html.Raw(comments.Message)</h6></p>
                            </div>
                            <hr />
                        }
                    }

                    else
                    {
                        <h5 class="text-secondary m-1">There are no comments yet..</h5>
                    }
                </div>



            </div>
        </div>
    </div>
    <div class="col-3 text-right">
        <a asp-action="Create" class="btn btn-success form-control text-white"> Add a Comment </a>
    </div>

