@model system2.Models.Comments
@{
    Layout = "_Template";
}

<div class="container m-3">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group bg-light p-2">
            <label asp-for="Message" class="control-label"></label>
            <div class="d-flex flex-row align-items-start">
                <input class="form-control" asp-for="Message" value="" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="mt-2 text-right">
                <input type="submit" class="btn btn-primary btn-sm shadow-none" value="Create" />
            </div>
        </div>
    </form>
    <br />
    <div>
        <a class="btn btn-sm btn-success" asp-action="Index">Back to Comments</a>
    </div>
</div>

